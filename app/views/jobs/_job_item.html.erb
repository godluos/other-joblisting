  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="row">
        <div class="col-md-10">
          <h3 class="panel-title">
            行程：<%= link_to("job.title", job_path(job)) %>
          </h3>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="trix-content">
        <p><%= job.description %></p>
      </div>
    </div>
      <div class="panel-footer">

<table id="lb" class="table table-boldered" >
      <thead>
        <tr>
          <td>最低成行人数</td>
          <td>最大成行人数</td>
          <td>参加人数</td>
          <td>出发日期</td>
          <td>创建时间</td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.resumes.count %></td>
          <td><%= job.contact_email %></td>
          <td><%= job.created_at %></td>
        </tr>
      </tbody>
      </table>

    </div>
  </div>
</div>
