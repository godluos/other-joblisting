<div id="jobform" class="well auth-box">

<div class="row jobs-show">
  <div class="col-md-12 col-lg-10 col-lg-offset-1">

    <p><%= link_to(job.title, job_path(job)) %></p>

    <table id="lb" class="table table-boldered" >
          <thead>
            <tr>
              <td>最低成行人数</td>
              <td>最大成行人数</td>
              <td>参加人数</td>
              <td>出发日期</td>
              <td>创建时间</td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= job.wage_lower_bound %></td>
              <td><%= job.wage_upper_bound %></td>
              <td><%= job.resumes.count %></td>
              <td><%= job.contact_email %></td>
              <td><%= time_ago_in_words(job.created_at) %></td>
            </tr>
          </tbody>
          </table>
  </div>
</div>

</div>
