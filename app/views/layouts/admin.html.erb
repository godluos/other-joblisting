<!DOCTYPE html>
<html>
   <head>
       <title>Job Listing</title>
       <%= csrf_meta_tags %>

       <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
       <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   </head>

   <body>
       <div class="container-fluid">
         <%= render "common/navbar1" %>
         <%= render "common/flashes" %>
         <div class="list_group">
              <div class="col-md-2">
             <ul class="nav nav-pills nav-atacked" style="max-width: 300px; padding-top:45px;">
               <a href= admin_jobs_path class="list-group-item active">Admin Dashborad</a>
               <a href= jobs_path class="list-group-item">User Dashboard</a>
             </ul>
           </div>

           <div class="col-md-10">
             <%= yield %>
           </div>
         </div>
       </div>

       <%= render "common/footer" %>
